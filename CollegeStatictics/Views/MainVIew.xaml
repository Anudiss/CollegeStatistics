<UserControl x:Class="CollegeStatictics.Views.MainVIew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:CollegeStatictics.ViewModels"
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:MainVM}">
    <ui:NavigationView Header="{Binding CurrentViewHeader}"
                       IsSettingsVisible="False"
                       SelectionChanged="NavigationView_SelectionChanged"
                       IsPaneToggleButtonVisible="False"
                       IsBackButtonVisible="Collapsed"
                       PaneDisplayMode="LeftCompact"
                       CompactPaneLength="200"
                       MenuItemsSource="{x:Static vm:MainVM.NavigationItems}">
        <ui:NavigationView.Content>
            <ContentControl Content="{Binding CurrentView}"
                            ContentTemplate="{StaticResource ItemsContainerTemplate}"/>
        </ui:NavigationView.Content>
    </ui:NavigationView>
</UserControl>
